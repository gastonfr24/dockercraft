# DockerCraft - EditorConfig
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{json,js}]
indent_style = space
indent_size = 2

[Dockerfile*]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 2

