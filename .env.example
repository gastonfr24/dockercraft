# DockerCraft - Environment Variables Example
# Copy this file to .env and adjust values as needed
# All variables have sensible defaults in Dockerfile

# CORE SERVER CONFIGURATION
VERSION=1.21.1
TYPE=PAPER
EULA=TRUE

# MEMORY ALLOCATION
MEMORY=4G

# PLAYER SETTINGS
MAX_PLAYERS=20

# WORLD CONFIGURATION
LEVEL_NAME=world
DIFFICULTY=normal
GAMEMODE=survival

# GAMEPLAY SETTINGS
PVP=true
ALLOW_FLIGHT=false
SPAWN_PROTECTION=16

# PERFORMANCE SETTINGS
VIEW_DISTANCE=10
SIMULATION_DISTANCE=10
USE_AIKAR_FLAGS=true

# AUTO-PAUSE CONFIGURATION
ENABLE_AUTOPAUSE=TRUE
AUTOPAUSE_TIMEOUT_EST=300
AUTOPAUSE_TIMEOUT_KN=120

# RCON (REMOTE CONTROL)
ENABLE_RCON=true
RCON_PORT=25575
RCON_PASSWORD=minecraft

# SERVER IDENTITY
MOTD=A Minecraft Server powered by DockerCraft

# LOGGING
LOG_TIMESTAMP=true
TZ=America/New_York
