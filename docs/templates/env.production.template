# ============================================
# DockerCraft - Configuración de PRODUCCIÓN
# ============================================
# 
# ⚠️  IMPORTANTE: 
# 1. Copiar este archivo a .env.production
# 2. Modificar valores según tu setup
# 3. NUNCA subir .env.production a Git (está en .gitignore)
#
# Uso: docker compose --env-file .env.production -f docker-compose.prod.yml up -d
#
# ============================================

# ============================================
# CORE CONFIGURATION
# ============================================

EULA=TRUE
VERSION=1.21.1
TYPE=PAPER

# ============================================
# MEMORY & PERFORMANCE
# ============================================

MEMORY=8G
INIT_MEMORY=2G
USE_AIKAR_FLAGS=true

# ============================================
# PLAYER SETTINGS
# ============================================

MAX_PLAYERS=20

# ============================================
# WORLD CONFIGURATION
# ============================================

LEVEL_NAME=world
DIFFICULTY=normal
GAMEMODE=survival
PVP=true
VIEW_DISTANCE=10
SIMULATION_DISTANCE=10
SPAWN_PROTECTION=16

# ============================================
# SECURITY - CRÍTICO PARA PRODUCCIÓN
# ============================================

ONLINE_MODE=true
ENABLE_WHITELIST=true
ENABLE_COMMAND_BLOCK=false
ALLOW_FLIGHT=false

# ============================================
# RCON (Admin Remoto)
# ============================================

ENABLE_RCON=true
RCON_PORT=25575
RCON_PASSWORD=CAMBIAR_ESTO_A_PASSWORD_SEGURO

# ============================================
# AUTO-PAUSE
# ============================================

ENABLE_AUTOPAUSE=TRUE
AUTOPAUSE_TIMEOUT_EST=300
AUTOPAUSE_TIMEOUT_KN=120

# ============================================
# SERVER IDENTITY
# ============================================

MOTD=§6§lMi Servidor Privado §f| §bSolo Invitados

# ============================================
# TIMEZONE
# ============================================

TZ=America/Argentina/Buenos_Aires

# ============================================
# LOGGING
# ============================================

LOG_TIMESTAMP=true
GUI=FALSE

# ============================================
# PERFORMANCE TUNING
# ============================================

MAX_TICK_TIME=-1
NETWORK_COMPRESSION_THRESHOLD=256
RATE_LIMIT=true

# ============================================
# MONITORING & ALERTS
# ============================================

DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL
SERVER_DOMAIN=mi-servidor.duckdns.org
SERVER_PORT=25565

# ============================================
# BACKUPS
# ============================================

BACKUP_DIR=/backups
BACKUP_RETENTION_DAYS=7
RCLONE_REMOTE=gdrive
RCLONE_REMOTE_DIR=minecraft-backups

